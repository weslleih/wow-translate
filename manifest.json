{
	"name": "WoW Translate",
	"version": "0.0.1",
	"manifest_version": 2,

	// Recommended
	"description": "__MSG_ext_description__",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"default_locale": "pt_BR",
	"app": {
		"launch": {
      		"local_path": "results.html"
      	}
    },

	"permissions": ["contextMenus", "tabs","storage"],
	

	"options_page": "options.html",

	"omnibox": {
		"keyword": "wt"
	},

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	}
}